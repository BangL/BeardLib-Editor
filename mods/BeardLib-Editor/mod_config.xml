<mod name="BeardLib-Editor" global_key="BeardLibEditor">
    <modules>
        <OptionModule build_menu="false" auto_load="true">
            <options>
                <option_group name="Map">
                    <option type="number" default_value="5" name="MainSliderSpeed" min="0.5" max="50" step="0.5" value_changed="$global$.callbacks:UpdateSliderSpeed"/>
                    <option type="number" default_value="1" name="SecondarySliderSpeed" min="0.5" max="50" step="0.5" value_changed="$global$.callbacks:UpdateSliderSpeed"/>
                </option_group>
            </options>
        </OptionModule>
    </modules>
</mod>
